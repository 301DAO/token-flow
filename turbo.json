{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "web#dev": {
      "env": [
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "ALCHEMY_API_KEY",
        "NEXT_PUBLIC_ENABLE_TESTNETS",
        "VERCEL_URL"
      ]
    },
    "database#dev": {
      "env": [
        "NODE_ENV",
        "DYNAMODB_LOCAL_ENDPOINT",
        "AWS_REGION",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY"
      ]
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^deploy"],
      "cache": false
    }
  }
}
